{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "siteOwner",
    "skills",
    "hobbies",
    "projects",
    "gallery",
    "contacts"
  ],
  "additionalProperties": false,

  "properties": {
    "siteOwner": {
      "type": "object",
      "required": ["name", "profession", "description"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "minLength": 2 },
        "profession": { "type": "string" },
        "description": { "type": "string", "minLength": 10 }
      }
    },

    "skills": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },

    "hobbies": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },

    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "projectId",
          "name",
          "technology",
          "duration",
          "githubUrl"
        ],
        "additionalProperties": false,
        "properties": {
          "projectId": {
            "type": "integer",
            "minimum": 1
          },
          "name": {
            "type": "string",
            "minLength": 3
          },
          "technology": {
            "type": "string"
          },
          "duration": {
            "type": "string"
          },
          "githubUrl": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },

    "gallery": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["imageId", "src", "description"],
        "additionalProperties": false,
        "properties": {
          "imageId": {
            "type": "integer",
            "minimum": 1
          },
          "src": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },

    "contacts": {
      "type": "object",
      "required": ["phone", "email", "address"],
      "additionalProperties": false,
      "properties": {
        "phone": {
          "type": "string",
          "pattern": "^\\+380\\d{9}$"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "address": {
          "type": "string"
        }
      }
    }
  }
}
